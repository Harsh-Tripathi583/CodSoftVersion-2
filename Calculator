def calculator():
    print("üßÆ Welcome to Simple Calculator")
    
    try:
        num1 = float(input("Enter first number: "))
        num2 = float(input("Enter second number: "))
    except ValueError:
        print("‚ùå Invalid input. Please enter numeric values.")
        return

    print("\nChoose an operation:")
    print("1. Addition (+)")
    print("2. Subtraction (-)")
    print("3. Multiplication (*)")
    print("4. Division (/)")
    
    choice = input("Enter your choice (1/2/3/4): ")

    if choice == '1':
        result = num1 + num2
        print(f"‚úÖ Result: {num1} + {num2} = {result}")
    elif choice == '2':
        result = num1 - num2
        print(f"‚úÖ Result: {num1} - {num2} = {result}")
    elif choice == '3':
        result = num1 * num2
        print(f"‚úÖ Result: {num1} * {num2} = {result}")
    elif choice == '4':
        if num2 != 0:
            result = num1 / num2
            print(f"‚úÖ Result: {num1} / {num2} = {result}")
        else:
            print("‚ùå Error: Cannot divide by zero.")
    else:
        print("‚ùó Invalid operation choice.")

calculator()
